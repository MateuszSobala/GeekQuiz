@{
    ViewBag.Title = "The questions database";
}
@section Scripts { 
    <script src="~/js/app.js"></script>
    <script src="~/js/questions/questionFactory.js"></script>
    <script src="~/js/questions/questionController.js"></script>
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body ng-app="app">

    <h1>All the questions</h1>
    <div ng-controller="questionController">
        
        <div ng-repeat="question in questions">
            <h2>{{question.Title}}</h2>
            <ul>
                <li ng-repeat="option in question.Options">
                    <h3>{{option.Title}} {{option.IsCorrect}}</h3>
                </li>
            </ul>
        </div>
        
    </div>
</body>
</html>
